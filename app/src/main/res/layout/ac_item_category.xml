<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="16dp"

    >

    <LinearLayout
        android:paddingTop="4dp"
        android:id="@+id/ac_categroies_rv_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ac_categroies_rv_bckg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_circle"
            android:gravity="center">

            <ImageView
                android:id="@+id/ac_categroies_rv_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_star"
                app:tint="@color/white"></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/ac_categroies_rv_catname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:visibility="visible"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="50"
            android:text="Chemia domowa chemia"
            android:textColor="@color/olx_color_1"
            android:textSize="10sp"
            android:textStyle="bold">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>