        android:layout_marginRight="60dp"
        android:textColor="@color/olx_color_1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/char_detail_nested_percentage_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/char_value_detail_nested_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:text="231"
        android:textColor="@color/olx_color_1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/char_detail_nested_currency_txt"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>