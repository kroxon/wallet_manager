<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.FirstFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/first_example"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="First fragment 1"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tIdIcon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="id icon"
            app:layout_constraintBottom_toTopOf="@+id/first_example_2"
            app:layout_constraintEnd_toEndOf="@+id/first_example"
            app:layout_constraintStart_toStartOf="@+id/first_example"
            app:layout_constraintTop_toBottomOf="@+id/first_example" />

        <Button
            android:id="@+id/bIdIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="id icon"
            app:layout_constraintBottom_toBottomOf="@+id/tIdIcon"
            app:layout_constraintEnd_toStartOf="@+id/tIdIcon"
            app:layout_constraintTop_toTopOf="@+id/tIdIcon"></Button>

        <ImageView
            android:id="@+id/imgIdIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/tIdIcon"
            app:layout_constraintStart_toEndOf="@+id/tIdIcon"
            app:layout_constraintTop_toTopOf="@+id/tIdIcon"></ImageView>

        <TextView
            android:id="@+id/first_example_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="First fragment 2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_example" />


        <Button
            android:id="@+id/example_button"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:text="write to db"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@+id/example_button_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/example_button_2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:text="remove from db"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@id/example_button_3"
            app:layout_constraintStart_toEndOf="@id/example_button"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/example_button_3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:text="update db"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/example_button_2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/example_button_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="8dp"
            android:text="start activity
            category settings"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/example_button"
            app:layout_constraintStart_toStartOf="@+id/example_button"
            app:layout_constraintTop_toBottomOf="@id/example_button" />

        <Button
            android:id="@+id/button_dialog"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:text="start dialog"
            android:textAllCaps="false"
            android:textSize="10sp"
            app:layout_constraintEnd_toStartOf="@id/example_button_3"
            app:layout_constraintStart_toEndOf="@id/example_button"
            app:layout_constraintTop_toTopOf="@id/example_button_4" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/first_example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="This is a Fragment"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/open_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="open dialog" />

<!--            <Button-->
<!--                android:id="@+id/open_dialog_bundle"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_below="@+id/open_dialog"-->
<!--                android:layout_marginTop="-1dp"-->
<!--                android:text="open dialog with bundle" />-->

            <TextView
                android:id="@+id/input_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/open_dialog"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:textSize="15sp" />

        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/example_icon"
        layout="@layout/select_icon_layout"></include>

</RelativeLayout>