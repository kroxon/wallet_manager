<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/historyListlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/historyDate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="left|bottom"
        android:text="20.01.2023"
        android:paddingBottom="8dp"
        android:textColor="@color/olx_color_1"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/historyDate">

        <ImageView
            android:id="@+id/historyIcon"
            android:layout_width="30dp"
            android:layout_marginBottom="20dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorApp1">

        </ImageView>


        <TextView
            android:id="@+id/historyCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLength="30"
            android:maxLines="1"
            android:text="Chemiargrggreger hgfhgf hgfh  hfg hgfgrhr  tr  gerhtrhg"
            android:textColor="@color/darkgrey"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/historyIcon"
            app:layout_constraintTop_toTopOf="@+id/historyIcon"
            ></TextView>

        <TextView
            android:id="@+id/historySubcategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subcategory"
            android:textSize="12sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@+id/historyCategoryName"
            app:layout_constraintTop_toBottomOf="@+id/historyCategoryName" />


        <TextView
            android:id="@+id/historyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="18,78"
            android:textColor="@color/olx_color_1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/historyCurrency"
            app:layout_constraintTop_toTopOf="@+id/historyCategoryName" />


        <TextView
            android:id="@+id/historyCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="zÅ‚"
            android:textColor="@color/olx_color_1"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/historyValue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/historyValue" />

