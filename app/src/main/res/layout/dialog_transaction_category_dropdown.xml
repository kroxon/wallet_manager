<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/dialogTransactionCategoryDropdownImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/dialogTransactionCategoryDropdownTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="WC"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/dialogTransactionCategoryDropdownImg"
        app:layout_constraintStart_toEndOf="@+id/dialogTransactionCategoryDropdownImg"
        app:layout_constraintTop_toTopOf="@+id/dialogTransactionCategoryDropdownImg"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>